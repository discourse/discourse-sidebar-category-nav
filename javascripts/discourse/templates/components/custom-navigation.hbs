<div class="category-sidebar">
  <ul class="category-sidebar-list">
      <li class="category-sidebar-list-item">
        {{#link-to "discovery.latest" class="category-sidebar-list-item-link"}}
          All Topics
        {{/link-to}}
      </li>
    {{#each sidebarCategories as |sidebarCategory|}}
      <li class="category-sidebar-list-item">
        {{#link-to "discovery.category" sidebarCategory.slug class="category-sidebar-list-item-link"}}
          <span class="sidbar-category-badge" style="background-color: #{{sidebarCategory.color}};"></span>{{sidebarCategory.slug}}
        {{/link-to}}
      </li>
    {{/each}}
  </ul>
</div>